<div ng-controller="PostsController as postsCtrl">
    <button class="btn btn-default" onclick="postsCtrl.refresh">Refresh</button>
    <div class="row" ng-repeat="post in postsCtrl.posts">
        <div class="col-md-4 col-md-offset-4">
            <div class="col-md-4">
                <h2>{{post.caption}}</h2>
                <h3> 1 + 3 = {{1+3}}</h3>
                <img src="{{post.ImageUrl}}" alt="Place Kitten" />
                <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301871">Learn more &raquo;</a></p>
            </div>
        </div>
    </div>
</div>